<div class="ArticleWrap">
  <h1 class="ArticleTitle"><%= @article.title %></h1>

  <%= image_tag @article.cover_image, class: 'ArticleCoverImage' %>

  <p class="ArticleContent">
    <%= @article.content %>
  </p>
</div>

<% if !@is_pdf %>
  <%= link_to 'Edit', edit_article_path(@article) %> |
  <%= link_to 'Back', articles_path %>
<% end %>

